@page
@model Canil.Pages.IndexLojaModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "/Views/Shared/_LayoutLojaUser.cshtml";
}

<div>
    @{
        foreach (var p in Model.Products)
        {
            <a asp-page="Product" asp-route-name="@p.Name.Replace(" ", "-")">
                @p.Name - @p.Description - @p.Value
            </a>
            <br />
        }
    }
</div>
<a class="button is-primary" asp-page="/Checkout/Payment">Pagar</a>
@await Component.InvokeAsync("Cart")