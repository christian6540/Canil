@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <link href="~/css/login.css" rel="stylesheet" />
</head>

<body>
    <form action="action_page.php" method="post">
        <div class="imgcontainer">
            <img src="~/Imagens/Login/BraxFeb19.jpg" alt="Avatar" class="avatar">
        </div>

        <div class="container">
            <label for="uname"><b>Username</b></label>
            <input type="text" placeholder="Enter Username" name="uname" required>

            <label for="psw"><b>Password</b></label>
            <input type="password" placeholder="Enter Password" name="psw" required>

            <button type="submit" class="btn draw-border">Login</button>
            <label>
                <input type="checkbox" name="remember"> Remember me
            </label>
        </div>

        <div class="container" style="background-color:#101010">
            
            <button type="button" class="cancelbtn" onclick="location.href='@Url.Action("index", "home")'">Cancel</button>
            <span class="psw">Forgot <a href="#">password?</a></span>
        </div>
    </form>
</body>

</html>